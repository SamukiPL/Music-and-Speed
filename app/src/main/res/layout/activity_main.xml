<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.samuki.musicandspeed.MainActivity">

    <include
    android:id="@+id/activityKurnaToolbar"
    layout="@layout/tool_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/albumCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/progressBar"
            android:src="@drawable/default_album_cover"
            android:contentDescription="@string/albumCover"
            android:background="@color/colorAudioListRowBackground"/>

        <View
            android:id="@+id/player_progressBarBackground"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_above="@+id/actualSpeed"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            android:layout_marginBottom="-2dp"
            android:layout_marginRight="-4dp"
            android:layout_marginEnd="-4dp"
            android:background="@color/colorProgressBarBackground" />

        <ProgressBar
            android:id="@id/progressBar"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_above="@+id/actualSpeed"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:id="@id/actualSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/actualSong"
            android:text="@string/speed_not_available"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@id/actualSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/buttons"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@id/buttons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="3">
            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_prev_circle_outline_white_48dp"
                android:onClick="previousMusic"
                android:layout_weight="1"
                android:contentDescription="@string/previous"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/ic_play_circle_outline_white_48dp"
                android:text="@string/play"
                android:onClick="playMusic"
                android:layout_weight="1"
                android:contentDescription="@string/play"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next_circle_outline_white_48dp"
                android:onClick="nextMusic"
                android:layout_weight="1"
                android:contentDescription="@string/next"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>