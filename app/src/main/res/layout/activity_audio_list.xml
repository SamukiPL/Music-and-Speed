<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.samuki.musicandspeed.MainActivity" >
    <include
        android:id="@+id/activityToolbar"
        layout="@layout/tool_bar"/>
    <LinearLayout
        android:id="@+id/listChooser"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/activityToolbar"
        android:orientation="horizontal"
        android:weightSum="2">
            <TextView
                android:id="@+id/musicListChooser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Songs"
                android:textAlignment="center"
                android:background="@color/colorListChooserChecked"
                android:onClick="changeList"/>
            <TextView
                android:id="@+id/listsListChooser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lists"
                android:textAlignment="center"
                android:background="@color/colorListChooserUnchecked"
                android:onClick="changeList"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/listChooser"
        android:layout_above="@+id/player"
        android:weightSum="1"
        android:baselineAligned="false">
        <ScrollView
            android:id="@+id/musicList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/musicContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:id="@+id/listsList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <LinearLayout
                android:id="@+id/listContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/defaultList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/defaultList"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
        <RelativeLayout
            android:id="@id/player"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:onClick="goToMainActivity">
                <ProgressBar
                    android:id="@+id/player_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <ImageView
                    android:id="@+id/player_albumCover"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/player_progressBar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/default_album_cover"
                    android:contentDescription="@string/albumCover"/>
                <TextView
                    android:id="@+id/player_trackTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/player_progressBar"
                    android:layout_toRightOf="@id/player_albumCover"
                    android:layout_toEndOf="@id/player_albumCover"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/player_albumCover"
                    android:layout_toEndOf="@id/player_albumCover"
                    android:layout_below="@id/player_trackTitle"
                    android:weightSum="3">

                        <ImageButton
                            android:id="@+id/previousButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_previous"
                            android:onClick="previousMusic"
                            android:layout_weight="1"
                            android:contentDescription="@string/previous"/>
                        <ImageButton
                            android:id="@+id/playButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_play"
                            android:text="@string/play"
                            android:onClick="playMusic"
                            android:layout_weight="1"
                            android:contentDescription="@string/play"/>
                        <ImageButton
                            android:id="@+id/nextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_next"
                            android:onClick="nextMusic"
                            android:layout_weight="1"
                            android:contentDescription="@string/next"/>
                </LinearLayout>

        </RelativeLayout>
</RelativeLayout>