<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/musicRow_audioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/musicRowCheckBoxes_slowDriving"
        android:layout_toStartOf="@+id/musicRowCheckBoxes_slowDriving"
        android:text="Nazwa piosenki"
        android:textSize="20dp"/>
    <CheckBox
        android:id="@+id/musicRowCheckBoxes_slowDriving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/musicRowCheckBoxes_fastDriving"
        android:layout_toStartOf="@+id/musicRowCheckBoxes_fastDriving" />
    <CheckBox
        android:id="@+id/musicRowCheckBoxes_fastDriving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>